---
import Card from "./Card.astro";

const featuresData = [
  {
    title: " Zero JavaScript Runtime",
    body: "Astro renders HTML on the server and strips away any remaining, unused JavaScript.",
  },
  {
    title: "The Power of Islands",
    body: " Need interactive UI? Load individual, non-blocking component islands in parallel.",
  },
  {
    title: "Lazy-Loading Islands",
    body: "Components only hydrate when they scroll into view. If you don't see it, Astro won't load it.",
  },
];
---

<!-- creating a list and outputting the data  -->
<section class="features">
  <div class="container">
    {
      // for each feature it takes the content and outputs it
      featuresData.map((feature) => (
        <Card>
          <h3>{feature.title}</h3>
          <p>{feature.body}</p>
        </Card>
      ))
    }
  </div>
</section>

<!-- we want everything to be encapsulated in the components, so we put styles here! -->
<!-- we have media query so that they work on different screens -->
<style>
  .features .container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 20px;
    padding: 0 20px;
    margin: 30px auto;
  }

  @media (max-width: 960px) {
    .logos-small {
      display: block;
      margin: auto;
    }
    .logos {
      display: none;
    }
  }

  @media (max-width: 500px) {
    .features .container {
      /* if the screen is less than 500, they stack in the middle */
      grid-template-columns: 1fr;
    }
  }
</style>
